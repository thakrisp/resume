---
let experience = [
  {
    title: "Prototype Developer",
    company: "BrightStar Eng",
    location: "Troy, MI",
    time: "2022 - Present",
  },
  {
    title: "IT Support Specialist",
    company: "BrightStar Eng",
    location: "Troy, MI",
    time: "2018 - Present",
  },
  {
    title: "System Wiring Illustrator",
    company: "BrightStar Eng",
    location: "Troy, MI",
    time: "2012 - Present",
  },
];
---

<div class="flex flex-col justify-center mt-2">
  <h1 class="text-4xl underline text-center font-semibold">Work Experience</h1>
  <div
    class="flex flex-col w-full items-center md:flex-row md:justify-center md:space-x-10"
  >
    {
      experience.map((item) => (
        <div class=" bg-gray-200 my-2 w-fit p-2 rounded-md text-center">
          <div class="font-bold">{item.title}</div>
          <div class="italic font-semibold">{item.company}</div>
          <div>{item.location}</div>
          <div>{item.time}</div>
        </div>
      ))
    }
  </div>
</div>
